/* pages/common/search/search.wxss */

.search {
  position: relative;
  width: 100%;
  height: 108rpx;
  box-sizing: border-box;
  padding: 0rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search_input {
  width: 694rpx;
  height: 64rpx;
  border-radius: 40rpx;
  background-color: #fff;
  position: relative;
}

.search_input_placeholder {
  margin-left: 80rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 30rpx;
  color: #999999;
}

.search_img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 34rpx;
  left: 8%;
}

.search_text {
  width: 96rpx;
  height: 56rpx;
  background: #FF6F2D;
  opacity: 1;
  border-radius: 40rpx;
  position: absolute;
  right: 4%;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #fff;
}