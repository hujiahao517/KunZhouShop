/* pages/common/goods/goodsListItem/goodsListItem.wxss */
.goodsListItem{
  background: #FFFFFF;
  border-radius: 16rpx;
}
.goodsListItem_topImg{
  display: block;
  width: 336rpx;
  height: 336rpx;
  background: rgba(0, 0, 0, 0);
  opacity: 1;
  border-radius: 16rpx 16rpx 0px 16rpx;
}
.goodsListItem_Text{
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
}
.goodsListItem_Text_q1{
  display: flex;
  align-items: center;
  padding: 0rpx 12rpx;
}
.goodsListItem_Text_imgicon{
  width: 44rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.goodsListItem_Text_text{
  width: 100%;
  font-size: 28rpx;
font-weight: 400;
color: #333333;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}
.goodsListItem_Texe_pricebox{
  padding: 0rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
.goodsListItem_Texe_pricebox_left{
font-weight: bold;
line-height: 40rpx;
color: #FF6F2D;
justify-content: space-between;
}
.goodsListItem_Texe_pricebox_left_icon{
  font-size: 20rpx;
}
.goodsListItem_Texe_pricebox_left_price{
  font-size: 28rpx;
  
}
.goodsListItem_Texe_pricebox_right{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
font-weight: 500;
line-height: 30rpx;
color: #999999;
}
.goodsListItem_Texe_pricebox_right_left{

}
.goodsListItem_Texe_pricebox_right_right{
  width: 20rpx;
  height: 20rpx;
}
.reward_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16rpx;
  padding: 0rpx 12rpx;
  height: 60rpx;
}
.reward_box_left{
  padding: 6rpx 12rpx;
  background: rgba(255, 111, 45, 0.1);
opacity: 1;
border-radius: 8rpx;
color: #FF6F2D;
}
.reward_box_right{
  font-weight: 500;
  /* line-height: 15px; */
  color: #999999;
}
.choujiangbox{
  display: flex;
  flex-direction: row;
  padding: 0rpx 12rpx;
  flex-wrap: wrap;
}
.choujiangbox_q1{
  width: 50%;
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.choujiangbox_q1:nth-last-child(1){
  margin-bottom: 12rpx;
}
.choujiangbox_q1>image{
  width: 28rpx;
  height: 28rpx;
}
.choujiangbox_q1_Text{
  font-size: 16rpx;
font-family: PingFang SC;
font-weight: 500;
color: #999999;
margin-left: 8rpx;
}
.choujiangbox_q1_Text_icon{
  color: #FF6F2D;
  font-size: 20rpx;
}