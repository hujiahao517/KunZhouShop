/* pages/view/Tools_and_Services/factory_backstage/My_order/My_order.wxss */
.jiavantabs{
  width: 750rpx;
  height: 88rpx;
  background: #FFFFFF;
}
.vantabs {
  width: 750rpx;
  height: 88rpx;
  background: #FFFFFF;
  position: fixed;
  top: 0;
  left: 0;
}
.van-tab--active{
  color: #FF6F2D !important;
}

.van-tabs__line {
  width: 44rpx !important;
  height: 6rpx !important;
  background: linear-gradient(135deg, #FF6F2D 0%, #F32F11 100%);
}

.van-ellipsis {
  font-size: 32rpx !important;
}

.van-tabs__scroll {
  height: 88rpx !important;
}

.van-tab:nth-child(7) {

  overflow: auto;
}

.van-ellipsis {
  flex-basis: 21.6% !important;
  overflow: auto !important;
  text-overflow: clip !important;
}

.content_Q1 {
  margin: 0rpx auto;
  margin-top: 20rpx;

  background-color: #FFFFFF;
  width: 694rpx;
  box-sizing: border-box;
}

.content_Q1_title {
  display: flex;
  height: 80rpx;
  padding: 0rpx 28rpx 0rpx 24rpx;
  border-bottom: 2rpx solid #E8E8E8;
  align-items: center;
}

.content_Q1_title_left {
  display: flex;
}

.content_Q1_title_left>image {
  width: 48rpx;
  height: 48rpx;
}

.content_Q1_title_left>text {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6F2D;
}

.content_Q1_title_right {
  flex: 1;
  text-align: end;
  font-size: 24rpx;
  font-weight: 400;
  color: #FF6F2D;
}

.content_Q1_center {
  height: 216rpx;
  width: 100%;
  padding: 20rpx 26rpx 0rpx 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #E8E8E8;
}

.content_Q1_center_left {
  width: 176rpx;
  height: 176rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 16rpx;
}

.content_Q1_center_left>image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.content_Q1_center_right {
  margin-left: 20rpx;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.content_Q1_center_right_top {
  display: flex;
  flex-direction: row;
}

.content_Q1_center_right_top_left {
  width: 292rpx;
  height: 102rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.content_Q1_center_right_top_right {
  flex: 1;
  display: flex;
  align-items: center;
  text-align: end;
  color: #FF6F2D;
  justify-content: flex-end;
}

.icon_price {
  font-size: 20rpx;
}

.price {
  font-size: 28rpx;
}

.content_Q1_center_right_center {
  text-align: end;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #999999;
}

.content_Q1_center_right_bottom {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  justify-content: space-between;
}

.guige {
  color: #999999;
}

.huoli {
  color: #FF6F2D;
  margin-left: 20rpx;
}
.money{
  padding: 24rpx 28rpx 20rpx 0rpx;
  text-align: end;
  font-size: 24rpx;
font-weight: 400;
color: #999999
}
