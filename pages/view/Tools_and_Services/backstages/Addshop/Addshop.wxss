/* pages/add_goods/add_goods.wxss */
/*审核、驳回*/
.nav{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width:100%;
  height:88rpx;
  background:#fff;
  position: fixed;
  top: 0;
  left: 0;
}
.swiper-tab{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.swiper-tab-item{
   flex:1;
   height:88rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   font-size:32rpx;
  color:#333333;
 
}
.active{
    color:var(--themeColor);
    font-size: 32rpx;
    font-weight: bold;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 20rpx;
}
.show{
  display: block;
  width: 100%;

}
.hidden{
  display: none;
}
.line{
  display: block;
  width:44rpx;
  height:8rpx;
  border-radius: 8rpx;
  margin-top:8rpx;
  background:#fff;
}
.active1{
  background:linear-gradient(to right, #FF6F2D, #F32F11);
}
.jia_box{
  width: 100%;
  height: 176rpx;
}
/*搜索框*/
.search{
  width:100%;
  height:88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background:#fff;
  padding: 12rpx 0;
  box-sizing: border-box;
  position: fixed;
  top: 88rpx;
  left: 0;
}
.search input{
  border: 2rpx solid var(--themeColor);
  width: 538rpx;
  height: 65rpx;
  border-radius: 40rpx;
  padding: 8rpx 0 7rpx 28rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}
.search text{
  display: block;
    width: 48rpx;
    height: 34rpx;
    color: #999999;
    font-size: 24rpx;
    margin: 28rpx 28rpx 26rpx 0;
}
/*商品内容*/
.main{
  width:100%;
}
.info{
  width:694rpx;
  height:390rpx;
  margin:20rpx auto;
  background:#fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
}
.info_top{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info_top text:nth-child(1){
  color: #999999;
  font-size: 24rpx;
  padding: 16rpx 0 16rpx 30rpx;
}
.info_top text:nth-child(2){
  color:var(--themeColor);
  font-size: 24rpx;
  padding: 16rpx 28rpx 16rpx 0;
  font-weight: bold;
}
.info_center{
  width:100%;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  border-top: 1.2rpx solid #E8E8E8;
  border-bottom: 1.2rpx solid #E8E8E8;
}
.info_center image{
  width:176rpx;
  height:176rpx;
  background:pink;
  border-radius: 16rpx;
  margin: 20rpx 0 40rpx 28rpx;
}
.info_center_right{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.info_center_right_top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top_info{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.name{
  display: block;
  width: 292rpx;
  height: 65rpx;
  font-weight: bold;
  font-size:24rpx;
  color:#333333;
  margin: 20rpx 0 0 20rpx;
  display: -webkit-box;
  word-break: break-all;
 -webkit-line-clamp: 2;
 overflow: hidden;
 text-overflow: ellipsis;
 -webkit-box-orient: vertical;
}
.price{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 64rpx;
  margin-right: 28rpx;
}
.price:nth-child(1){
  color:var(--themeColor);
  font-size:20rpx;
  
}
.price:nth-child(2){
  color:var(--themeColor);
  font-size:28rpx;
  font-weight: bold;
}
.info_center_right_bottom{
  margin: 70rpx 0 0 20rpx;
  color: #333333;
  font-size: 24rpx;
}
.info_bottom{
  margin-top:20rpx;
}
.info_bottom text{
  color:var(--themeColor);
  border-radius: 28rpx;
  border:1.2rpx solid var(--themeColor);
  padding:10rpx 16rpx;
  font-size:20rpx;
  margin:0 28rpx 20rpx 0;
}