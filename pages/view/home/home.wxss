/* pages/view/home/home.wxss */
.jia_header_box{
  width: auto;
  background: linear-gradient(130deg, #FF6F2D 0%, #F32F11 100%);
  opacity: 1;
  height: 296rpx;
  position: fixed;
  z-index: 2;
}
.header_box {
  width: 120%;
  /* height: 500rpx; */
  background: linear-gradient(130deg, #FF6F2D 0%, #F32F11 100%);
  opacity: 1;
  border-radius: 0px 0px 280rpx 280rpx;
  margin-top:296rpx;
}

.title {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title_img {
  width: 236rpx;
  height: 60rpx;
}

/* 轮播图 */
.page_section {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  /* margin-top: -218rpx; */
  position: relative;
  bottom: -20rpx;
}

.lunbo_image {
  display: block;
  width: 100%;
  height: 100%;
}

.newswipe {
  height: 280rpx;
  width: 694rpx;
  overflow: hidden;
  border-radius: 10rpx;
}

/* 通知栏 */
.notice {
  width: 694rpx;
  height: 76rpx;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.notice_left {
  width: 84rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.notice_left_img {
  width: 36rpx;
  height: 36rpx;
}

.notice_right {
  flex: 1;
  height: 100%;
}

.swiper,
.swiper-item {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  display: flex;
  align-items: center;
}

.class_area {
  width: 694rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 0rpx;
  margin-top: 22rpx;
}

.class_area_lowprice {
  width: 173.5rpx;
  height: 176rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.class_area_lowprice_img {
  width: 84rpx;
  height: 84rpx;
  display: block;
  margin: 0 auto;
}

.class_area_lowprice_text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 30rpx;
  color: #333333;
  margin-top: 6rpx;
}
.guanggao_box{
  width: 694rpx;
  height: 436rpx;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;

  background: #ffffff;
}
/* 广告位 */
.guanggao_img{
  width: 100%;
  overflow: auto;
}
.guanggao_img:nth-child(1){
  padding-bottom: 20rpx;
}
.guanggao_imgs{
  overflow-x: auto;
  overflow-y: hidden;
  width:max-content;
  height: 180rpx;
}
::-webkit-scrollbar {
width: 0px; /*对垂直流动条有效*/
height: 0px; /*对水平流动条有效*/
}

.guanggao_imgq1{
float: left;
width: 240rpx;
height: 180rpx;
margin-right: 20rpx;
position: relative;
box-sizing: border-box;
background-color: #ffffff;
}
.guanggao_imgtu{
display: block;
width: 240rpx;
height: 180rpx;
position: relative;
}
.guanggao_zhezhao{
   position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.guanggao_zhezhao_img{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
/* 广告层结束 */

